<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" type="text/css" href="../stylesheets/master.css">
    <link href="https://fonts.googleapis.com/css?family=Gothic+A1:100,300,500,600,700,800&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Report Page</title>
  </head>


    <body>
    <div class="container-fluid">
          <nav>
                <input type="checkbox" id="nav" class="hidden">
                <label for="nav" class="nav-btn">
                      <i></i>
                      <i></i>
                      <i></i>
                </label>
                <div class="logo">
                      <a href="#"><img src="../assets/logo.png" width="50"></a>
                </div>
                <div class="nav-wrapper">
                      <ul>
                            <li><a href="/reviews">About</a></li>
                            <li><a href="#">Overview</a></li>
                            <li><a href="#">Market Overview</a></li>
                            <li><a href="#">Github</a></li>
                      </ul>
                </div>

                <div class="row mb-4">
                </div>

          </nav>

    </div>

      <div class="container-fluid">
        <div class="row mt-5 mb-5">
          <div class="col-4 offset-2">
          <h1>feel.io Product Analysis</h1>
          <h5>ASIN:#<%= product.asin %> </h5>
        </div>

        <hr size="10px" width="70%" align="center">
      </div>
    </div>

    <div class="container-fluid">
        <div class="row mt-5 mb-5">
          <div class="col-4 offset-4 text-center">
          <h3>Sentiment breakdown</h3>
        </div>
      </div>

        <div class="row mt-5 mb-5 d-flex">
          <div class="col-2 offset-2 text-center bg-green">
            <h1 class=" bolded"><%= product.averageScore[0] %> %</h1>
            <p>Good</p>
        </div>

          <div class="col-2 text-center bg-red">
              <h1 class="bolded"><%= product.averageScore[1] %> %</h1>
              <p>Bad</p>
          

          </div>

          <div class="col-2 text-center bg-yellow">
            
              <h1 class="bolded"><%= product.averageScore[2] %> %</h1>
              <p>Neutral</p>
            

          </div>

          <div class="col-2 text-center bg-blue align-items-center">
              <h1 class="bolded"><%= product.averageScore[3] %> %</h1>
              <p>Mixed</p>
            

          </div>
        </div>

        <hr size="10px" width="70%" text-align="center">
      </div>

      <div class="container">
        <div class="row mt-5 mb-5">
          <div class="col-4 offset-4 text-center">
            <h3>Keyword Pain Point</h3>
          </div>
        </div>
        <div class="row">
          <% keywords.forEach((keyword) => { %>
            <div class="col-3">
            <a href="#"> <%= keyword %> </a>
            </div>
          <% }); %>
        </div>
      </div>



      <!-- Optional JavaScript -->
      <!-- jQuery first, then Popper.js, then Bootstrap JS -->
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>

  </html>
